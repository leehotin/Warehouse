<!DOCTYPE html>
<html>
  <head><script></script>
    <title>Warehouse In Out system</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <script src="/js/darkMode.js"></script>
  </head>
  <body class="darkmode">
    <div class="container">
      <div class="row">
        <div class="col-2">
          <div class="list-group list-group-flush text-center">
              <a href="/" class="list-group-item darkmode">首頁</a>
              <a href="/productlist" class="list-group-item darkmode">貨品</a>
              <a href="/stock" class="list-group-item darkmode">儲存位置</a>
              <a href="/deliveryOrder" class="list-group-item darkmode">貨單</a>
              <a href="/user" class="list-group-item darkmode">用戶</a>
              <a href="/recycleBin" class="list-group-item darkmode">回收箱</a>
              <label class="list-group-item darkmode darkmode-btn" onclick="darkMode(this)">夜間模式</label>
              <button type="submit" form="logout" class="list-group-item darkmode">登出</button>
          </div> 
          
          <form action="/user/logout" method="post" id="logout" hidden>
          </form> 
        </div>

        <div class="col-10">
          <div class="row my-1">
            <div class="col">                
                <label><a href="/"  class="darkmode">首頁</a></label> /
                <label class="darkmode">回收箱</label><br>                
                <button type="submit" form="rollback" class="btn btn-warning" <% if(datas.length==0){ %>disabled<% } %>>復原</button>    
            </div>
          </div>
          <form action="/recycleBin/rollback" method="post" id="rollback">
            <div class="row">
              <div class="col m-1">
                <div class="row text-center">
                  <label>進桶表</label>
                </div>
                <div class="row my-1 border-bottom border-primary bg-primary-subtle text-black">
                  <div class="col fw-bold fs-5 text-center">
                    <label><a href='/recycleBin?sort=<%= sort %>&title=time'>進垃圾桶時間</a></label>
                  </div>
                  <div class="col fw-bold fs-5 text-center">
                    <label>誰經手的</label>
                  </div>
                  <div class="col fw-bold fs-5 text-center">
                    <label>來自哪裡</label>
                  </div>
                </div>
              <% for(i in datas){ %>
                  <div class="row py-1 border-bottom border-dark">
                      <div class="">
                          <input type="checkbox" value="<%= datas[i]._id %>" name="rollback_no" >
                          
                        </div>  
                    <div class="col text-center">
                      <a href="/deliveryOrder/info?delivery_id=" class="darkmode"><%= datas[i]._id.getTimestamp() %></a>
                    </div>
                    <div class="col text-center">
                      <%= datas[i].who %>
                    </div>
                    <div class="col text-center">
                    <%= datas[i].source %>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
    document.addEventListener('load', setDarkMode());
  </script>  
</html>
