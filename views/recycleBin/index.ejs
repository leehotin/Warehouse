<!DOCTYPE html>
<html>
  <head>
    <title>Warehouse In Out system</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <script src="/js/darkMode.js"></script>
  </head>
  <body class="darkmode">
    <div class="container">
      <div class="row">
        <div class="col-2">
          <div class="list-group list-group-flush text-center">
            <a href="/" class="list-group-item darkmode">Index</a>
            <a href="/productlist" class="list-group-item darkmode">Products</a>
            <a href="/stock" class="list-group-item darkmode">Stocks</a>
            <a href="/deliveryOrder" class="list-group-item darkmode">Delivery Orders</a>
            <a href="/user" class="list-group-item darkmode">Users</a>
            <button type="submit" form="logout" class="list-group-item darkmode">Logout</button>
            <a href="/recycleBin" class="list-group-item darkmode">Recycle Bin</a>
            <label class="list-group-item darkmode" onclick="darkMode(this)">Dark Mode</label>
          </div> 
          
          <form action="/user/logout" method="post" id="logout">
          </form> 
        </div>

        <div class="col-10">
          <div class="row my-1">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/"  class="darkmode">Home</a></li>
                    <li class="breadcrumb-item active darkmode" aria-current="page">recycleBin</li>
                </ol>
                <button type="submit" form="rollback" class="">復原</button>    
            </div>
          </div>
          <form action="/recycleBin/rollback" method="get" id="rollback">
          <div class="row">
            <div class="col m-1">
              <!-- delivery Order(created_at) == new Date().date  -->
              <div class="row text-center">
                <label>進桶表</label>
              </div>
              <div class="row my-1 border-bottom border-primary bg-secondary-subtle">
                <div class="col fw-bold fs-5 text-center">
                  <label><a href='/recycleBin?sort=<%= sort %>&title=time'>進垃圾桶時間</a></label>
                </div>
                <div class="col fw-bold fs-5 text-center">
                  <label>誰經手的</label>
                </div>
                <div class="col fw-bold fs-5 text-center">
                  <label>來自哪裡</label>
                </div>
              </div>
             <% for(data of datas){ %>
                <div class="row py-1 border-bottom border-primary">
                    <div class="">
                        <input type="checkbox" value="<%= data._id %>" name="rollback_no" >
                        
                      </div>  
                  <div class="col text-center">
                    <a href="./deliveryOrder/info?delivery_id="><%= data._id.getTimestamp() %></a>
                  </div>
                  <div class="col text-center">
                    <%= data.who %>
                  </div>
                  <div class="col text-center">
                   <%= data.source %>
                  </div>
                </div>
              <% } %>
            </div>
            <div class="col m-1">
              <!-- delivery Order(delivery_check) == 0 && delivery_at == null-->
              <div class="row text-center">
                <label>Not Finish Order</label>
              </div>
              <div class="row my-1 border-bottom border-primary bg-secondary-subtle">
                <div class="col fw-bold fs-5 text-center">
                  <label>Delivery Id</label>
                </div>
                <div class="col fw-bold fs-5 text-center">
                  <label>Company</label>
                </div>
                <div class="col fw-bold fs-5 text-center">
                  <label>Type</label>
                </div>
              </div>
             
                <div class="row py-1 border-bottom border-primary">
                  <div class="col text-center">
                    <a href="./deliveryOrder/info?delivery_id="></a>
                  </div>
                  <div class="col text-center">
                    
                  </div>
                  <div class="col text-center">
                    
                  </div>
                </div>
              
            </div>
          </div>
          </form>
        </div>
      </div>
    </div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
    document.addEventListener('load', setDarkMode());
  </script>  
</html>
