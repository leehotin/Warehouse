<!DOCTYPE html>
<html>
  <head>
    <title>Warehouse In Out system</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-2">
          <div class="list-group list-group-flush text-center">
              <a href="/" class="list-group-item disabled" disabled>Index</a>
              <a href="/productlist" class="list-group-item">Products</a>
              <a href="/stock" class="list-group-item">Stocks</a>
              <a href="/deliveryOrder" class="list-group-item">Delivery Orders</a>
              <a href="/user" class="list-group-item">Users</a>
              <button type="submit" form="logout" class="list-group-item">Logout</button>
          </div> 
          
          <form action="/user/logout" method="post" id="logout">
          </form> 
        </div>

        <div class="col-10">
          <div class="row my-1">
            <div class="col">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Home</li>
                </ol>
            </div>
          </div>
          <div class="row">
            <div class="col m-1">
              <!-- delivery Order(created_at) == new Date().date  -->
              <div class="row text-center">
                <label>Today Create Order</label>
              </div>
              <div class="row my-1 border-bottom border-dark bg-secondary-subtle">
                <div class="col fw-bold fs-5 text-center">
                  <label>Delivery Id</label>
                </div>
                <div class="col fw-bold fs-5 text-center">
                  <label>Company</label>
                </div>
                <div class="col fw-bold fs-5 text-center">
                  <label>Type</label>
                </div>
              </div>
              <% for(let data of datas.todayOrders){ %>
                <div class="row py-1 border-bottom border-dark">
                  <div class="col text-center">
                    <a href="./deliveryOrder/info?delivery_id=<%= data.delivery_id %>"><%= data.delivery_id %></a>
                  </div>
                  <div class="col text-center">
                    <%= data.company %>
                  </div>
                  <div class="col text-center">
                    <%= data.type %>
                  </div>
                </div>
              <% } %>
            </div>
            <div class="col m-1">
              <!-- delivery Order(delivery_check) == 0 && delivery_at == null-->
              <div class="row text-center">
                <label>Not Finish Order</label>
              </div>
              <div class="row my-1 border-bottom border-dark bg-secondary-subtle">
                <div class="col fw-bold fs-5 text-center">
                  <label>Delivery Id</label>
                </div>
                <div class="col fw-bold fs-5 text-center">
                  <label>Company</label>
                </div>
                <div class="col fw-bold fs-5 text-center">
                  <label>Type</label>
                </div>
              </div>
              <% for(let data of datas.notFinishs){ %>
                <div class="row py-1 border-bottom border-dark">
                  <div class="col text-center">
                    <a href="./deliveryOrder/info?delivery_id=<%= data.delivery_id %>"><%= data.delivery_id %></a>
                  </div>
                  <div class="col text-center">
                    <%= data.company %>
                  </div>
                  <div class="col text-center">
                    <%= data.type %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>
