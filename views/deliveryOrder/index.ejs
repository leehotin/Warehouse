<html>
    <head>
        <title>Warehouse In Out system</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <a href="/" class="btn btn-primary">index</a>
            <div class="row">
                <label class="fs-4">Search data:</label>
                <form action="/deliveryOrder" method="get" class="border m-1">
                    <div class="row">
                        <div class="col-2">
                            <label for="delivery_id">Delivery Id: </label>
                        </div>
                        <div class="col-10">
                            <input type="text" id="delivery_id" name="delivery_id" class="form-control" placeholder="Delivery Id">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            <label for="company">Company:</label> 
                        </div>
                        <div class="col-10">
                            <input type="text" id="company" name="company" class="form-control" placeholder="Company">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            <label for="address">Address:</label> 
                        </div>
                        <div class="col-10">
                            <input type="text" id="address" name="address" class="form-control" placeholder="Address">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            <label for="phone">Phone:</label> 
                        </div>
                        <div class="col-10">
                            <input type="text" id="phone" name="phone" class="form-control" placeholder="Phone">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            <label for="type">Delivery Type:</label> 
                        </div>
                        <div class="col-10">
                            <input type="text" id="type" name="type" class="form-control" placeholder="Delivery Type">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            <label for="delivery_check">Delivery Check:</label> 
                        </div>
                        <div class="col-10">
                            <input type="text" id="delivery_check" name="delivery_check" class="form-control" placeholder="Delivery Check">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            <label for="delivery_user">Delivery User: </label>
                        </div>
                        <div class="col-10">
                            <input type="text" id="delivery_user" name="delivery_user" class="form-control" placeholder="Delivery User">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            <label for="delivery_at">Delivery At:</label> 
                        </div>
                        <div class="col-10">
                            <input type="text" id="delivery_at" name="delivery_at" class="form-control" placeholder="Delivery At">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-2">
                            id:
                        </div>
                        <div class="col-10">
                            <input type="radio" name="id" value="1">Asc
                            <input type="radio" name="id" value="-1">Desc
                        </div>
                    </div>

                    <input type="submit" value="submit" class="btn btn-primary">
                </form>
            </div>

            <div class="row my-2 border-bottom border-dark bg-secondary-subtle">
                <div class="col fw-bold fs-5 text-center">
                    id
                </div>
                <div class="col fw-bold fs-5 text-center">
                    type
                </div>
                <div class="col fw-bold fs-5 text-center">
                    company
                </div>
                <div class="col fw-bold fs-5 text-center">
                    phone
                </div>
                <div class="col fw-bold fs-5 text-center">
                    delivery check
                </div>
                <div class="col fw-bold fs-5 text-center">
                    delivery user
                </div>
                <div class="col fw-bold fs-5 text-center">
                    delivery at
                </div>
                <div class="col fw-bold fs-5 text-center">
                    edit
                </div>
            </div>
            <% for(data of datas){ %>
                <div class="row py-2 border-bottom border-dark">
                    <div class="col">
                        <%= data.delivery_id %>
                    </div>
                    <div class="col">
                        <%= data.type %>
                    </div>
                    <div class="col">
                        <%= data.company %>
                    </div>
                    <div class="col">
                        <%= data.phone %>
                    </div>
                    <div class="col">
                        <%= data.delivery_check ? "Finish": "Not Finish" %>
                    </div>
                    <div class="col">
                        <%= data.delivery_user %>
                    </div>
                    <div class="col">
                        <%= data.delivery_at ? data.delivery_at : "Not Finish" %>
                    </div>
                    <div class="col">
                        <a href="/deliveryOrder/<%= data._id %>" class="btn btn-primary">edit</a>
                        <form action="/deliveryOrder/delete" method="post" class="d-inline">
                            <input type="text" value="<%= data._id %>" name="delivery_id" hidden>
                            <input type="submit" class="btn btn-warning" value="delete">
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>