<html>

<head>
    <title>Warehouse In Out system</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <script src="/js/darkMode.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script type="module">
        import { setupSelectBox, btn } from '/js/script.js';
        document.addEventListener("DOMContentLoaded", function () {
            const selectBoxP = document.getElementById('selectBoxP');
            setupSelectBox(selectBoxP, 'influenceBoxP', 'products');
            btn();
        })
    </script>
</head>

<body class="darkmode">
    <div class="container">
        <div class="row">
            <div class="col-2">
                <div class="list-group list-group-flush text-center">
                    <a href="/" class="list-group-item darkmode">首頁</a>
                    <a href="/productlist" class="list-group-item darkmode">貨品</a>
                    <a href="/stock" class="list-group-item darkmode">儲存位置</a>
                    <a href="/deliveryOrder" class="list-group-item darkmode">貨單</a>
                    <a href="/user" class="list-group-item darkmode">用戶</a>
                    <a href="/recycleBin" class="list-group-item darkmode">回收箱</a>
                    <label class="list-group-item darkmode darkmode-btn" onclick="darkMode(this)">夜間模式</label>
                    <button type="submit" form="logout" class="list-group-item darkmode">登出</button>
                </div> 
                
                <form action="/user/logout" method="post" id="logout">
                </form> 
            </div>

            <div class="col-10">
                <div class="row my-1">
                    <div class="col">        
                        <label><a href="/" class="darkmode">首頁</a></label> / 
                        <label><a href="/productlist" class="darkmode">貨品</a></label> / 
                        <label class="darkmode">貨品資料</label>
                    </div>
                    <div class="col">
                        <button class="btn btn-primary" form="saveProduct">建立貨品資料</button>
                    </div>
                </div>

                <form action="./saveProduct" method="post" id="saveProduct">
                    <div class="row my-1 border-bottom border-primary bg-primary-subtle text-black">
                        <div class="col fw-bold fs-5 text-center">
                            新貨品資料
                        </div>
                    </div>
                    <div class="row py-1 my-1 border-bottom border-primary">
                        <div class="col">
                            <label for="Product_id">貨品編號:</label>
                            <input type='text' class="form-control text-center" name="Product_id" id="Product_id" value=""
                                size="50">
                        </div>
                        <div class="col">
                            <label for="Name">貨品名稱:</label>
                            <input type='text' class="form-control text-center" name="Name" id="Name" value="" size="10">
                        </div>
                    </div>
                    <div class="row py-1 my-1 border-bottom border-primary">
                        <div class="col">
                            <label for="Brand">生產公司:</label><select id="selectBoxP" name="Brand" class="form-select text-center">
                                <option value=''>-----請選擇-----</option>
                                <% for(let item of brands){ %>
                                    <option value="<%= item %>"><%= item %>
                                    </option>
                                    <% } %>
                            </select><br>
                            新生產公司：<input type='text' class="form-control text-center" name="new_Brand" id="Type" value="">
                        </div>
                        <div class="col">
                            <label for="Type">貨品類型:</label>
                            <select id="influenceBoxP" name="Type" class="form-select text-center">
                                <option value=''>-----請選擇-----</option>
                            </select><br>
                            貨品類型：<input type='text' class="form-control text-center" name="new_Type" id="Brand" value="">
                        </div>
                        <div class="col">
                            <label for="Origin">產地:</label><select name='Origin' class="form-select text-center">
                                <option value="">-----請選擇-----</option>
                                <% for(let item of origins){ %>
                                    <option value="<%= item %>">
                                        <%= item %>
                                    </option>
                                    <% } %>
                            </select><br>
                            新產地：<input type='text' class="form-control text-center" name="new_Origin" id="Origin" value=""
                                size="50">
                        </div>
                        <div class="col">
                            <label for="stock">儲存位置:</label><select name='stock_id' class="form-select text-center">
                                <% for(let item of stocks){ %>
                                    <option value="<%= item._id %>">
                                        <%= item.name %>
                                    </option>
                                    <% } %>
                            </select><br>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script>
        document.addEventListener('load', setDarkMode());
    </script>  
</html>