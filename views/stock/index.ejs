<html>
    <head>
        <title>Warehouse In Out system</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <div class="row my-1">
                <div class="col">
                    <a href="/" class="btn btn-primary">index</a>
                </div>
            </div>
            <div class="row">
                <form action="/stock" method="get">
                    <div class="row">
                        <div class="col-1">
                            Stock area: 
                        </div>
                        <div class="col-11">
                            <input type="text" name="area" class="form-control">
                        </div>

                        <div class="col-1">
                            Shelf: 
                        </div>
                        <div class="col-11">
                            <input type="text" name="name" class="form-control">
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-1">
                            id:
                        </div>
                        <div class="col-11">
                            <input type="radio" name="stock_id" value="1">asc<br>
                            <input type="radio" name="stock_id" value="-1">desc
                        </div>
                    </div>
                    <input type="submit" value="submit">
                </form>
            </div>

            <div class="row my-1 border-bottom border-dark">
                <div class="col fw-bold fs-5 text-center">
                    id
                </div>
                <div class="col fw-bold fs-5 text-center">
                    stock area
                </div>
                <div class="col fw-bold fs-5 text-center">
                    stock shelf
                </div>
                <div class="col fw-bold fs-5 text-center">
                    edit
                </div>
            </div>
            <% for(data of datas){ %>
                <div class="row py-1 border-bottom border-dark">
                    <div class="col text-center">
                        <%= data.stock_id %>
                    </div>
                    <div class="col text-center">
                        <%= data.area %>
                    </div>
                    <div class="col text-center">
                        <%= data.name %>
                    </div>
                    <div class="col text-center">
                        <a href="/stock/info?stock_id=<%= data._id %>" class="btn btn-primary">edit</a>
                        <a href="/stock/delete?stock_id=<%= data._id %>" class="btn btn-warning">delete</a>   
                    </div>
                </div>
            <% } %>
        </div>
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>